{
  "name": "next-js-boilerplate",
  "author": "Ixartz (https://github.com/ixartz)",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "pnpm dlx @spotlightjs/spotlight",
    "dev:next": "next dev --turbopack",
    "dev": "npx run-p db-server:file dev:*",
    "build": "next build --turbopack",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true pnpm build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "check:i18n": "i18n-check -l src/locales -s en -u src -f next-intl",
    "commit": "cz",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "db-server:file": "pglite-server --db=local.db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -c production -- drizzle-kit migrate",
    "db:migrate:dev": "dotenv -c development -- drizzle-kit migrate",
    "db:studio": "dotenv -c production -- drizzle-kit studio",
    "db:studio:dev": "dotenv -c development -- drizzle-kit studio",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@arcjet/next": "1.0.0-beta.15",
    "@clerk/localizations": "^3.31.0",
    "@clerk/nextjs": "^6.36.3",
    "@hookform/resolvers": "^5.1.1",
    "@logtape/logtape": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@sentry/nextjs": "^10.31.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.85.5",
    "babel-plugin-react-compiler": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commitizen": "^4.3.1",
    "drizzle-orm": "^0.44.3",
    "lucide-react": "^0.535.0",
    "next": "15.5.9",
    "next-intl": "^4.6.1",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "posthog-js": "^1.257.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.60.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "vite": "^7.0.6",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.17.0",
    "@chromatic-com/playwright": "^0.12.5",
    "@clerk/types": "^4.71.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@electric-sql/pglite-socket": "^0.0.10",
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@faker-js/faker": "^9.9.0",
    "@lingual/i18n-check": "^0.8.4",
    "@next/bundle-analyzer": "15.5.0",
    "@next/eslint-plugin-next": "15.5.0",
    "@playwright/test": "^1.54.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@spotlightjs/spotlight": "4.5.1",
    "@storybook/addon-a11y": "^9.0.18",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/addon-vitest": "^9.0.18",
    "@storybook/nextjs-vite": "^9.0.18",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/eslint-plugin-query": "^5.83.1",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "@types/react": "19.1.11",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "checkly": "^6.1.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.0.18",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "import-in-the-middle": "^2.0.0",
    "knip": "^5.62.0",
    "lefthook": "^1.12.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "require-in-the-middle": "^8.0.1",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "storybook": "^9.0.18",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.11"
    }
  }
}
