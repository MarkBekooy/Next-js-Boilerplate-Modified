{
  "name": "next-js-boilerplate",
  "author": "Mark Bekooy",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "pnpm dlx @spotlightjs/spotlight",
    "dev:next": "next dev --turbopack",
    "dev": "npx run-p db-server:file dev:*",
    "build": "next build --turbopack",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true pnpm build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "check:i18n": "i18n-check -l src/locales -s en -u src -f next-intl",
    "commit": "cz",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "db-server:file": "pglite-server --db=local.db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -c production -- drizzle-kit migrate",
    "db:migrate:dev": "dotenv -c development -- drizzle-kit migrate",
    "db:studio": "dotenv -c production -- drizzle-kit studio",
    "db:studio:dev": "dotenv -c development -- drizzle-kit studio",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@arcjet/next": "^1.0.0-beta.15",
    "@base-ui/react": "^1.0.0",
    "@clerk/localizations": "^3.31.0",
    "@clerk/nextjs": "^6.36.3",
    "@hookform/resolvers": "^5.2.2",
    "@logtape/logtape": "^1.3.1",
    "@sentry/nextjs": "^10.31.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.85.5",
    "babel-plugin-react-compiler": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commitizen": "^4.3.1",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.561.0",
    "next": "~15.5.9",
    "next-intl": "^4.6.1",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "posthog-js": "^1.257.2",
    "posthog-node": "^5.17.3",
    "radix-ui": "^1.4.3",
    "react": "~19.2.3",
    "react-dom": "~19.2.3",
    "react-hook-form": "^7.68.0",
    "shadcn": "^3.6.1",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "uuid": "^11.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@chromatic-com/playwright": "^0.12.8",
    "@clerk/types": "^4.71.0",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@commitlint/prompt-cli": "^20.2.0",
    "@commitlint/types": "^19.8.1",
    "@electric-sql/pglite": "^0.3.14",
    "@electric-sql/pglite-socket": "^0.0.19",
    "@eslint-react/eslint-plugin": "^2.3.13",
    "@lingual/i18n-check": "^0.8.4",
    "@next/bundle-analyzer": "^16.0.10",
    "@next/eslint-plugin-next": "^16.0.10",
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@spotlightjs/spotlight": "4.5.1",
    "@storybook/addon-a11y": "^10.1.9",
    "@storybook/addon-docs": "^10.1.9",
    "@storybook/addon-vitest": "^10.1.9",
    "@storybook/nextjs-vite": "^10.1.9",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/eslint-plugin-query": "^5.83.1",
    "@types/node": "^25.0.2",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.2.7",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "checkly": "^6.9.7",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.25",
    "eslint-plugin-storybook": "^10.1.9",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "import-in-the-middle": "^2.0.0",
    "knip": "^5.74.0",
    "lefthook": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "require-in-the-middle": "^8.0.1",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "storybook": "^10.1.9",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.8.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.1",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
